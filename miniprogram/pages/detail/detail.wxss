/* detail.wxss */
.detail-container {
  padding: 20rpx;
}

.loading-container {
  height: 60vh;
}

.section-title {
  color: #333;
  font-size: 32rpx;
}

.section-content {
  color: #666;
  font-size: 28rpx;
  line-height: 1.6;
  white-space: pre-wrap;
}

.tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  background-color: #667eea;
  color: white;
}

.tag-outline {
  background-color: transparent;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.tag-small {
  padding: 4rpx 12rpx;
  font-size: 22rpx;
}

/* 操作菜单 */
.action-sheet-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.action-sheet {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #f8f9fa;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  z-index: 1001;
}

.action-sheet-content {
  padding: 20rpx;
  background-color: white;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.action-item:last-child {
  border-bottom: none;
}

.action-cancel {
  margin: 20rpx;
  padding: 30rpx;
  background-color: white;
  text-align: center;
  border-radius: 20rpx;
  font-size: 32rpx;
  color: #666;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
  font-size: 36rpx;
  color: #333;
}

.modal-body {
  padding: 0 30rpx 40rpx;
  text-align: center;
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  padding: 20rpx 30rpx 40rpx;
}

.btn-danger {
  background: linear-gradient(45deg, #ff6b6b, #ee5a52);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 工具类 */
.ml-10 {
  margin-left: 20rpx;
}

.ml-15 {
  margin-left: 30rpx;
}

.mr-10 {
  margin-right: 20rpx;
}

.mr-15 {
  margin-right: 30rpx;
}

.mb-10 {
  margin-bottom: 20rpx;
}

.mb-15 {
  margin-bottom: 30rpx;
}

.mb-20 {
  margin-bottom: 40rpx;
}

.mt-20 {
  margin-top: 40rpx;
}

.font-weight-bold {
  font-weight: bold;
}

.flex-align-center {
  display: flex;
  align-items: center;
}

.flex-wrap {
  flex-wrap: wrap;
}

/* 防止事件冒泡 */
.stopPropagation {
  position: relative;
  z-index: 1002;
}