/* create.wxss */

.container {
  background: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  background: white;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left {
  display: flex;
  align-items: center;
}

.back-btn {
  background: none;
  border: none;
  font-size: 48rpx;
  color: #333;
  padding: 0;
  margin-right: 20rpx;
  line-height: 1;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.save-btn {
  background: #ccc;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  transition: background 0.3s;
}

.save-btn.active {
  background: #667eea;
}

/* 复盘类型样式 */
.type-section {
  padding: 40rpx;
  background: white;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.type-tabs {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.type-tab {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid transparent;
  border-radius: 40rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  transition: all 0.3s;
}

.type-tab.active {
  background: #667eea;
  color: white;
  border-color: #667eea;
}

/* 输入区域样式 */
.input-section {
  padding: 40rpx;
  background: white;
  margin-bottom: 20rpx;
}

.title-input {
  width: 100%;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: 2rpx solid transparent;
  transition: border-color 0.3s;
}

.title-input:focus {
  border-color: #667eea;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 内容区域样式 */
.content-section {
  margin-bottom: 20rpx;
}

.content-block {
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.content-block:last-child {
  border-bottom: none;
}

.block-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.block-icon {
  margin-right: 16rpx;
  font-size: 36rpx;
}

.content-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid transparent;
  box-sizing: border-box;
}

.content-textarea:focus {
  border-color: #667eea;
}

/* 标签区域样式 */
.tags-section {
  padding: 40rpx;
  background: white;
  margin-bottom: 20rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #eee;
  border-radius: 30rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.tag-item.active {
  background: #667eea;
  color: white;
  border-color: #667eea;
}

.tag-item .remove-btn {
  margin-left: 12rpx;
  color: #999;
  font-size: 20rpx;
}

.tag-item.active .remove-btn {
  color: rgba(255,255,255,0.7);
}

.add-tag-input {
  flex: 1;
  min-width: 120rpx;
  padding: 12rpx 24rpx;
  background: #f8f9fa;
  border-radius: 30rpx;
  font-size: 24rpx;
  border: 2rpx solid #eee;
}

/* 心情评分样式 */
.mood-section {
  padding: 40rpx;
  background: white;
  margin-bottom: 20rpx;
}

.mood-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.mood-option {
  text-align: center;
  flex: 1;
}

.mood-emoji {
  font-size: 48rpx;
  display: block;
  margin-bottom: 12rpx;
  transition: transform 0.2s;
}

.mood-emoji.active {
  transform: scale(1.2);
}

.mood-label {
  font-size: 20rpx;
  color: #999;
}

.mood-option.active .mood-label {
  color: #667eea;
  font-weight: 600;
}

/* 模板区域样式 */
.templates-section {
  padding: 40rpx;
  background: white;
  margin-bottom: 20rpx;
}

.template-list {
  margin-top: 20rpx;
}

.template-item {
  padding: 30rpx;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s;
}

.template-item:hover {
  border-color: #667eea;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.1);
}

.template-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.template-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.template-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.template-sections {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.template-section {
  background: #f8f9fa;
  color: #666;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
}

/* 底部固定按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 40rpx;
  background: white;
  border-top: 1rpx solid #eee;
  display: flex;
  gap: 20rpx;
}

.footer-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
}

.btn-save {
  background: #667eea;
  color: white;
}

.btn-draft {
  background: white;
  color: #667eea;
  border: 2rpx solid #667eea;
}

/* 模态框样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-height: 80%;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  padding: 40rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.modal-body {
  padding: 40rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  padding: 40rpx;
  display: flex;
  gap: 20rpx;
}

.modal-footer button {
  flex: 1;
  padding: 24rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 工具类 */
.mb-20 {
  margin-bottom: 40rpx;
}

.p-20 {
  padding: 40rpx;
}