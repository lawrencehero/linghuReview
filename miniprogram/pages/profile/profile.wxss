/* profile.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
}

/* 用户信息区域 */
.user-header {
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #eee;
}

.user-details {
  flex: 1;
  margin-left: 30rpx;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-desc {
  font-size: 28rpx;
  color: #999;
}

.login-btn {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
}

/* 统计数据 */
.stats-grid {
  display: flex;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 功能列表 */
.menu-list {
  margin-bottom: 30rpx;
}

.menu-item {
  margin-bottom: 20rpx;
  padding: 0;
}

.menu-content {
  padding: 30rpx;
}

.menu-extra {
  font-size: 26rpx;
  color: #999;
}

/* 登出区域 */
.logout-section {
  padding: 0 20rpx;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background-color: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  padding: 40rpx 30rpx 20rpx;
  font-size: 36rpx;
  color: #333;
}

.modal-body {
  padding: 0 30rpx 40rpx;
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  padding: 20rpx 30rpx 40rpx;
}

.feedback-modal .modal-body {
  padding: 0 30rpx 20rpx;
}

.feedback-textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.about-modal .modal-header {
  padding: 30rpx 30rpx 20rpx;
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 20rpx;
  display: block;
}

.app-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.app-version {
  font-size: 24rpx;
  color: #999;
}

.about-content {
  margin-bottom: 30rpx;
  line-height: 1.6;
}

.about-features {
  text-align: left;
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.feature-item:last-child {
  margin-bottom: 0;
}

/* 按钮样式 */
.btn-danger {
  background: linear-gradient(45deg, #ff6b6b, #ee5a52);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.btn-secondary {
  background: white;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 50rpx;
  padding: 22rpx 46rpx;
  font-size: 32rpx;
}

.w-full {
  width: 100%;
}

/* 工具类 */
.flex-align-center {
  display: flex;
  align-items: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

.ml-10 {
  margin-left: 20rpx;
}

.ml-15 {
  margin-left: 30rpx;
}

.mr-10 {
  margin-right: 20rpx;
}

.ml-15 {
  margin-left: 30rpx;
}

.font-weight-bold {
  font-weight: bold;
}

.text-center {
  text-align: center;
}

/* 防止事件冒泡 */
.stopPropagation {
  position: relative;
  z-index: 1001;
}