/* index.wxss */

.container {
  background: #f8f9fa;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  padding: 40rpx 40rpx 60rpx;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid rgba(255,255,255,0.3);
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.user-level {
  font-size: 24rpx;
  opacity: 0.8;
}

.notification-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

/* 统计数据样式 */
.stats-section {
  padding: 0 40rpx;
  margin-top: -40rpx;
}

.stats-grid {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.stat-card {
  flex: 1;
  padding: 40rpx 20rpx;
  text-align: center;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.1);
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.progress-card {
  padding: 30rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.1);
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.progress-percentage {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 600;
}

.progress-bar {
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 快捷操作样式 */
.quick-actions {
  display: flex;
  gap: 20rpx;
  padding: 40rpx;
}

.action-btn {
  flex: 1;
  padding: 40rpx 20rpx;
  text-align: center;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.1);
  transition: transform 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-icon {
  display: block;
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.action-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

/* 提醒卡片样式 */
.reminder-section {
  padding: 0 40rpx 20rpx;
}

.reminder-card {
  padding: 30rpx;
  background: linear-gradient(135deg, #ffeaa7, #fab1a0);
  border-radius: 16rpx;
  color: #2d3436;
}

.reminder-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.reminder-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.reminder-title {
  font-size: 28rpx;
  font-weight: 600;
}

.reminder-content {
  font-size: 26rpx;
  line-height: 1.5;
}

/* 最近记录样式 */
.recent-section {
  padding: 0 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.more-btn {
  font-size: 24rpx;
  color: #667eea;
}

.recent-list {
  margin-bottom: 40rpx;
}

.recent-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: white;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
  transition: transform 0.2s ease;
}

.recent-item:active {
  transform: scale(0.98);
}

.recent-content {
  flex: 1;
}

.recent-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.recent-preview {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.recent-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.recent-time {
  font-size: 22rpx;
  color: #999;
}

.recent-tags {
  display: flex;
  gap: 8rpx;
}

.tag {
  background: #f8f9fa;
  color: #667eea;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

.recent-arrow {
  font-size: 32rpx;
  color: #ccc;
  margin-left: 20rpx;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
}

.empty-icon {
  display: block;
  font-size: 96rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 每日一句样式 */
.quote-section {
  padding: 0 40rpx 40rpx;
}

.quote-card {
  padding: 40rpx;
  background: linear-gradient(135deg, #a8edea, #fed6e3);
  border-radius: 16rpx;
  text-align: center;
  position: relative;
}

.quote-icon {
  font-size: 40rpx;
  margin-bottom: 20rpx;
  display: block;
}

.quote-content {
  display: block;
  font-size: 28rpx;
  color: #2d3436;
  line-height: 1.6;
  margin-bottom: 16rpx;
  font-style: italic;
}

.quote-author {
  font-size: 22rpx;
  color: #636e72;
}

